{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",               // <= Aqui Ã© o mais importante
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src", "tools"],
  "exclude": ["node_modules", "dist"]
}
